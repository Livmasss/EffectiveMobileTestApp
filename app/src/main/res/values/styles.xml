<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="TitleTextViewStyle" parent="MainTextViewStyle">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="LoginInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">2dp</item>

        <item name="errorEnabled">true</item>

        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_close_big</item>
    </style>

    <style name="ButtonStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewLoyaltyPr" parent="MainTextViewStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#A0A1A3</item>
    </style>

    <style name="ActivityStyle">
        <item name="android:padding">20dp</item>
    </style>

    <style name="TagChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>

        <item name="closeIcon">@drawable/ic_close_small</item>

        <item name="chipBackgroundColor">@color/selector_tag_chip_bg</item>
        <item name="android:textColor">@color/selector_tag_chip_text</item>
    </style>
    
    <style name="OldPriceStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="DiscountViewStyle">
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:text">@string/discount_pattern</item>
        <item name="android:textSize">@dimen/preview_item_small_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/discount_value_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/preview_item_small_text_size</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="android:padding">3dp</item>
    </style>

</resources>